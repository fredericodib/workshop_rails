<div class="bunner">
	<div class="container">
		<h1 class="bunner__title">Inscreva-se agora</h1>
		<%= form_for @user do |f| %>
			<div class="col-md-6 offset-md-3">
				<%= f.text_field :name, placeholder: "Seu nome", class: "form-control form__input" %>
				<%= f.email_field :email, placeholder: "Seu email", class: "form-control form__input" %>
				<%= f.text_area :why_participate, placeholder: "Porque deseja participar?", class: "form-control form__textarea" %>
				<%= f.submit "Inscreva-se agora", class: "btn btn-primary btn-block" %>
			</div>
		<% end %>
	</div>
</div>
